<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_song_layout_height"
    android:layout_margin="@dimen/margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_song"
        android:layout_width="@dimen/img"
        android:layout_height="@dimen/img"
        android:layout_margin="@dimen/margin"
        android:background="@drawable/unknown_albums"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/papping"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name_song"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_small"
            android:textSize="@dimen/text_size_name_song"
            android:gravity="center|left"
            android:textColor="@color/colorBlack"
            android:text="@string/name_song" />

        <TextView
            android:id="@+id/txt_name_singer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_small"
            android:layout_marginTop="@dimen/margin"
            android:gravity="center|left"
            android:textSize="@dimen/text_size_name_singer"
            android:text="@string/name_singer" />
    </LinearLayout>
        <ImageView
            android:id="@+id/img_menu_song"
            android:layout_width="@dimen/img_normal"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin"
            android:src="@drawable/ic_menu_moreoverflow_small_normal" />
</LinearLayout>