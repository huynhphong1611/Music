<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:weightSum="4"
    android:layout_height="@dimen/height_notificaion"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_song_notification"
        android:layout_width="0dp"
        android:layout_height="@dimen/img"
        android:layout_weight="0.5"
        android:layout_margin="@dimen/margin"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:weightSum="2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_name_song_notification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_name_song_notification"
            android:gravity="center|left"
            android:textColor="@color/colorBlack"
            android:text="@string/name_song" />
        <TextView
            android:id="@+id/txt_name_singer_notification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin"
            android:gravity="center|left"
            android:textSize="@dimen/text_size_name_singer"
            android:text="@string/name_singer" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_notificaion_control"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:weightSum="3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_pre_song_notification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_notification"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/image_play_song_notification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_play_background"
            android:layout_margin="@dimen/margin_notification_play" />
        <ImageView
            android:id="@+id/image_next_song_notification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_notification"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>